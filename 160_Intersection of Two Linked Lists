public class Solution {
    public ListNode getIntersectionNode(ListNode headA, ListNode headB) {
       if (headA == null || headB == null) return null;

        ListNode tempA = headA;
        ListNode tempB = headB;

        int lenA = len(tempA);
        int lenB = len(tempB);

        while (lenA > lenB) {
            tempA = tempA.next;
            lenA--;
        }

        while (lenA < lenB) {
            tempB = tempB.next;
            lenB--;
        }

          while (tempA != null) {
           if (tempA == tempB) {
               return tempA;
           } else {
           tempA = tempA.next;
           tempB = tempB.next;
           }
       }
       return null;


    }

    public int len(ListNode listNode) {
        int len = 0;
        while (listNode != null) {
            len ++;
            listNode = listNode.next;
        }
        return len;
    }
}
