class Solution {
    public static int countSegments(String s) {

		 int count = 0;
		 String[] arr = s.split(" ");

		 for(int i = 0 ; i < arr.length;i++){

			 if(!arr[i].equals("")) count++;  // judge if space in arr equals to " "
		 }
		 return count;

	    }
	}
// Note: split（"//s+"） vs split(" +") vs split(" ")
