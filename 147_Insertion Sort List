class Solution {
    public ListNode insertionSortList(ListNode head) {
        if (head == null || head.next == null) return head;

        ListNode cur = head;
        ListNode next = null;
        ListNode helper = new ListNode(0);
        ListNode prev = helper;

        while (cur != null) {
            next = cur.next;
            
            while (prev.next != null && prev.next.val < cur.val) {
                prev = prev.next;
            }

            cur.next = prev.next;
            prev.next = cur;
            prev = helper;
            cur = next;
        }

        return helper.next;
    }
}
